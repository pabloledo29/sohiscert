<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Intranet Sohiscert{% endblock %}</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    {% block stylesheets %}
        <!-- Bootstrap 3.3.2 -->
        <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css"/>
        <!-- Font Awesome Icons -->
        <link href="{{ asset('plugins/fonts-awesome-4.3.0/css/fonts-awesome.min.css') }}" rel="stylesheet"
              type="text/css"/>
        <!-- Theme style -->
        <link href="{{ asset('dist/css/AdminLTE.min.css') }}" rel="stylesheet" type="text/css"/>
        <!-- Theme style -->
        <link href="{{ asset('dist/css/AdminLTE.min.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('dist/css/skins/skin-green-light.min.css') }}" rel="stylesheet" type="text/css"/>
        <!-- CSS shc -->
        <link href="{{ asset('app/css/style.css') }}" rel="stylesheet" type="text/css"/>
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body class="hold-transition skin-green-light fixed sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">
    {% block header %}
    <!-- header logo: style can be found in header.less -->
    <header class="main-header">
        <!-- Logo -->
        <a href="" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>SHC</b></span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg"><b>SOHISCERT</b></span>
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>

            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="glyphicon glyphicon-user"></i>
                            <span>{{ app.user.username | default('Anónimo') }} <i class="caret"></i></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="user-footer">
                                <div class="pull-left">
                                    <a href="{{ path('admin_useroperator_list') }}" class="btn btn-default btn-block">Listado</a>
                                </div>
                                <div class="pull-right">
                                    <a href="{{ path('security_logout') }}" class="btn btn-default btn-block">Salir</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
</div>
{% endblock %}


<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="{{ asset('app/img/favicon.png') }}" class="img-responsive img-rounded"
                     alt="Intranet Sohiscert"/>
            </div>
            <div class="pull-left info">
                <p>{{ app.user.username | default(' ') }}</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>

        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="header">MENÚ</li>
            <li>
                <a href="{{ path('admin_useroperator_list') }}"><i
                            class="fa fa-th-list"></i><span> Listado Clientes </span></a>
            </li>
            <li>
                <a href="{{ path('admin_operator_list_nouser') }}"><i
                            class="fa fa-plus-square"></i><span> Nuevo Cliente</span></a>
            </li>
            <li>
                <a href="{{ path('admin_search_operator') }}">
                    <i class="fa fa-search"></i><span> Operadores </span></a>
            </li>
            <li><a href="{{ path("useroperator_expediente_generaldoc") }}"><i class="fa fa-download"></i><span> Documentos </span></a>
            </li>
            <li><a href="{{ path("admin_uploadeddocs_list") }}"><i
                            class="fa fa-file"></i><span> Documentos Subidos</span></a>
            </li>
            <li><a target="_blank" href="https://intranet-sohiscert4.e4ff.pro-eu-west-1.openshiftapps.com/public/docs/Manual area de clientes Sohiscert v1.pdf"><i class="fa fa-download"></i>
                    <span> Manual Usuario </span></a>
            </li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    {% block content %} {% endblock %}
</div>
<!-- ./wrapper -->
{% block javascripts %}
    <!-- jQuery 2.1.3 -->
    <script src="{{ asset('plugins/jQuery/jQuery-2.1.3.min.js') }}" type="text/javascript"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
    <!-- SlimScroll -->
    <script src="{{ asset('plugins/slimScroll/jquery.slimscroll.min.js') }}" type="text/javascript"></script>
    <!-- AdminLTE js -->
    <script src="{{ asset('dist/js/app.min.js') }}" type="text/javascript"></script>
     
{% endblock %}
{% block js %} {% endblock %}
</body>
</html>
