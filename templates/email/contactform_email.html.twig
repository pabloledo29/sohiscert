{% extends ':email:baseemail.html.twig' %}

{% block subject %}Area Privada Sohiscert Contacto{% endblock %}

{% block body_text %}
    {% autoescape false %}
        Cliente : {{ cif }}
        Persona de Contacto: {{ contactName }}
        Descripción: {{ description }}
        Mensaje: {{ message }}
    {% endautoescape %}
{% endblock %}

