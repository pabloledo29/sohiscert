
{% extends 'base_full.html.twig' %}
{% block content %}


    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Documentos Generales
            <small>Documentos</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-group"></i> Documentos Generales</a></li>
            <li class="active">Documentos</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">


                <div class="box box-info">
                    <div class="box-header">
                        <!-- tools box -->
                        <div class="pull-right box-tools">
                            <button class="btn btn-danger btn-sm" data-widget="collapse" data-toggle="tooltip" title=""
                                    data-original-title="Collapse"><i class="fa fa-minus"></i></button>
                        </div>
                        <!-- /. tools -->
                        <i class="fa fa-user"></i>

                        <h3 class="box-title"> {{ type }}</h3>
                        {% for type, messages in app.session.flashbag.all() %}
                            {% for message in messages %}
                                <div class="flash-{{ type }}">
                                    <div class="form-box" id="login-box">
                                        <div class="alert alert-success alert-dismissable">
                                            <i class="fa fa-ban"></i>
                                            <button type="button" class="close" data-dismiss="alert"
                                                    aria-hidden="true">&times;</button>
                                            <b></b>{{ message }}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                    <!-- /.box-header -->
                    <div class="box-footer" style="display: block;">

                    </div>
                    <!-- /.box-footer -->
                </div>
                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-files-o"></i>

                        <h3 class="box-title">Listado de {{ type }} </h3>
                    </div>
                    <!-- /.box-header -->

                    <div class="box-body">
                        {% if filelist is defined and filelist|length > 0 %}
                            <table id="listDocs" class="table">
                                <thead>
                                <tr>
                                    <th>Documento</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% set i = 0 %}
                               
                                {% for key,doc in filelist %}
                                    <tr>
                                        <td>

                                            {{ key }}

                                        </td>
                                        {#<td>#}
                                        {#<i class="fa fa-floppy-o"></i>#}
                                        {#<a href="javascript:void(0)" onclick="return false;"> Descargar</a>#}
                                        {#</td>#}
                                        
                                        <td>

                                            <form id={{ "procesar_formulario" ~ i }} action="{{ path('admin_file_download') }}" method="POST">
                                                <input type="hidden" name="opNop" value="{{ opNop }}">
                                                <input type="hidden" name="path" value="{{ doc }}">
                                                <i class="fa fa-floppy-o"></i>
                                                <a  id={{ "btn_enviar" ~ i }} name={{ "btn_enviar" ~ i }}  href="#"
                                                    type="submit" onclick="$(this).closest('form').submit();"> Descargar
                                                </a><small  id={{"smallvisitas" ~ i }}>+ {{ visitas[i].visitas }} Visitas</small>

                                            </form>
                                        </td>

                                    </tr>
                                    {% set i = i + 1 %}
                                {% endfor %}
                                
                                </tbody>
                            </table>
                            {#<form action="{{ path('admin_file_download') }}" method="POST">#}
                                {#<input type="hidden" name="path" value="/Sitio2/CM2309FAE-12.pdf">#}
                                {#<i class="fa fa-floppy-o"></i>#}
                                {#<a href="#"#}
                                   {#onclick="$(this).closest('form').submit()"> CM2309FAE-12.pdf#}
                                {#</a>#}
                            {#</form>#}

                        {% else %}
                            <div class="callout callout-info">
                                <h4></h4>

                                <p>No hay documentos disponibles para mostrar.</p>
                            </div>
                        {% endif %}
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>

    </section>
    <script>
        setInterval('window.location.reload()', 10000);
    </script>
