{% extends 'base_private.html.twig' %}



{% block content %}

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-10">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Edición cliente</h3>
                    </div>
                    
                    <!-- /.box-header -->
                    {{ form_start(form, {'action': path('private_useroperator_edit'), 'method': 'POST'}) }}

                    <div class="box-body">

                        {% for type, messages in app.session.flashbag.all() %}
                           {% for message in messages %}
                                <div class="flash-{{ type }}">
                                    <div class="form-box" id="login-box">
                                        <div class="alert alert-success alert-dismissable">
                                            <i class="fa fa-ban"></i>
                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                            <b></b>{{ message }}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endfor %} 
                        <div class="form-group {% if form.current_password.vars.valid==false %}has-error{% endif %}">
                            {{ form_label(form.current_password, 'Password actual: ') }}
                            {{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'placeholder': '*******'} }) }}
                            <div id="error_password" class="error-block"><span
                                        class="label label-danger">{{ form_errors(form.current_password) }}</span>
                            </div>
                        </div>


                        <div class="form-group {% if form.password.first.vars.valid==false %}has-error{% endif %}">
                            {{form_row(form.password.first)}}

                            <div id="error_password" class="error-block"><span
                                        class="label label-danger">{{ form_errors(form.password.first) }}</span>
                            </div>
                        </div>
            

                        <div class="form-group {% if form.password.second.vars.valid==false %}has-error{% endif %}">
                            {{form_row(form.password.second)}}

                            <div id="error_password" class="error-block"><span
                                        class="label label-danger">{{ form_errors(form.password.second) }}</span>
                            </div>
                        </div>


                        <div class="input-group-btn">
                            <button id="save" class="btn btn-success"><i class="fa fa-save"></i> Añadir</button>
                        </div>


                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>



{% endblock %}