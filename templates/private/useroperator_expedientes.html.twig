{% extends 'base_private.html.twig' %}
{% block content %}


    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Clientes
            <small>Expedientes</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-group"></i> Clientes</a></li>
            <li class="active">Perfil</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">


                <div class="box box-info">
                    <div class="box-header">
                        <!-- tools box -->
                        <div class="pull-right box-tools">
                            <button class="btn btn-danger btn-sm" data-widget="collapse" data-toggle="tooltip" title=""
                                    data-original-title="Collapse"><i class="fa fa-minus"></i></button>
                        </div>
                        <!-- /. tools -->
                        <i class="fa fa-user"></i>

                        <h3 class="box-title">Expedientes </h3>
                        {% for type, messages in app.session.flashbag.all() %}
                            {% for message in messages %}
                                <div class="flash-{{ type }}">
                                    <div class="form-box" id="login-box">
                                        <div class="alert alert-success alert-dismissable">
                                            <i class="fa fa-ban"></i>
                                            <button type="button" class="close" data-dismiss="alert"
                                                    aria-hidden="true">&times;</button>
                                            <b></b>{{ message }}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                    <!-- /.box-header -->
                    <div class="box-footer" style="display: block;">

                    </div>
                    <!-- /.box-footer -->
                </div>
                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-th-list"></i>

                        <h3 class="box-title">Listado de Expedientes </h3>
                    </div>
                    <!-- /.box-header -->

                    <div class="box-body">
                        <table id="listoperators" class="table">
                            <thead>
                            <tr>
                                <th>NÂº Operador</th>
                                <th>Alcance</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if operators is defined %}
                                {% for op in operators %}
                                    <tr>
                                        <td>
                                            <form action="{{ path('private_useroperator_expediente_show') }}" method="POST">
                                                <input type="hidden" value="{{ op.id }}" name="id"/>
                                                <a href="#"
                                                   onclick="$(this).closest('form').submit()">{{ op.opNop }}</a>
                                            </form>
                                        </td>
                                        <td>{{ op.opRegistro.reDeno }}</td>
                                        <td>{{ op.opDenoop }}</td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>

    </section><!-- /.content -->
{% endblock %}